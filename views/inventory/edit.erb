<p>Edit Album?</p>

<form action="/inventory/<%= @album.id %>" method="post">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="<%= @album.title%>">
  <label for="name">Artist: </label>
  <input type="text" name="name" id="name" value="<%= @album.artist.name%>">
  <label for="genre">Genre: </label>
  <input type="text" name="genre" id="genre" value="<%= @album.genre%>">
  <label for="quantity">Quantity: </label>
  <input type="text" name="quantity" id="quantity" value="<%= @album.quantity%>">
  <label for="buy_price">Purchase Price: </label>
  <input type="number" name="buy_price" id="buy_price" value="<%= @album.buy_price%>">
  <label for="sale_price">Sale Price: </label>
  <input type="number" name="sale_price" id="sale_price" value="<%= @album.sale_price%>">
  <br>
  <br>

  <button class="change_button" type="button" name="button"><input class="button" type="submit" value="Confirm Changes?"></button>

</form>
