<h2>SALES BY <%= @artist.name.upcase %></h2>
<table>
  <tr>
    <th>Album</th>
    <th>Genre</th>
    <th>Sale Price</th>
    <th>Quantity</th>
    <th>Date</th>
  </tr>
  <tr>
    <%  @sales.each do |sale| %>
    <td><a href="/inventory/<%= sale.album.id %>"><%= sale.album.title %></td>
    <td><a href="/sales/<%= sale.genre %>"><%= sale.genre %></a></td>
    <td><%= sale.album.sale_price %></td>
    <td><%= sale.sale_quantity %></td>
    <td><%= Date.parse(sale.sale_date).strftime("%d/%m/%Y") %></td>
  </tr>
  <% end %>

</table>
