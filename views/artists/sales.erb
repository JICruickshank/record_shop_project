<h2>SALES BY <%= @artist.name.upcase %></h2>
<table>
  <tr>
    <th>Album</th>
    <th>Quantity</th>
    <th>Date</th>
  </tr>
  <tr>
    <%  @sales.each do |sale| %>
    <td><a href="/inventory/<%= sale.album.id %>"><%= sale.album.title %></a></td>
    <td><%= sale.sale_quantity %></td>
    <td><%= sale.sale_date %></td>
  </tr>
  <% end %>

</table>
